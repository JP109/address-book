.modal
      outline: 1px solid black;
      border-radius: 10px;
      padding: 10px;
      position: absolute;
      // z-index: 1;
      background: white;
      top: 20vh;

.form-row
      margin-top: 40px; 
      display: flex; 
      justify-content: flex-start; 
      flex-direction: column; 
      flex-wrap: wrap; 


      & input[type='text']
      & input[type='password']
      & input[type="number"]
            background-color: #FFFFFF; 
            border: 1px solid #D6D9DC; 
            border-radius: 3px; 
            width: 100%; 
            padding: 7px; 
            font-size: 14px; 

            &.ng-invalid.ng-touched
                  border: 1px solid red;
                  border-radius: 3px;
 
      & label 
            margin-bottom: 15px; 

      & button 
            font-size: 16px;
            font-weight: bold;
            color: #FFFFFF;
            background-color: #5995DA;
            border: none;
            border-radius: 3px;
            padding: 10px 40px;
            cursor: pointer;

            &:hover 
                  background-color: #040505;

            &:disabled
                  background-color: #76AEED;
                  cursor: not-allowed;

            &:active 
                  background-color: #407FC7;


@media only screen and (min-width: 700px) {
