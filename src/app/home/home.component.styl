      .form-row {
            flex-direction: row;
            align-items: flex-start; /* To avoid stretching */
            margin-top: 20px;
      }
      .form-row input[type='text'], 
      .form-row input[type='number'],
      .form-row input[type='password'] {
            width: 250px;
            height: initial;
      }
      .form-row label {
            text-align: right;
            width: 120px;
            margin-top: 7px;
            padding-right: 20px;
      }
      .form-row button {
            margin-left: 120px;
      }
