.container
      min-height: 100vh
      display: flex
      flex-direction: column
      align-items: center

.title
  margin-bottom: 30px

.contact-list
      min-width: 50vw
      display: flex
      flex-direction: column
      align-items: center

.contact-list > li
      list-style-type: none
      width: 100%
      display: flex
      justify-content: space-around
      align-items: center

      // background: grey
      background-color: #ECECEC
      min-height: 40px
      padding: 10px
      margin-bottom: 5px
      border-radius: 15px

.contact-list > li > p
      width: 100%

.contact-list > li > button
      font-size: 8px;
      font-weight: bold;
      color: #FFFFFF;
      background-color: #5995DA;
      border: none;
      border-radius: 3px;
      // padding: 4px 10px;
      min-width: 50px;
      padding: 4px 0 4px 0;
      margin: 0 10px 0 10px;
      cursor: pointer;


      &:hover 
            background-color: #040505;

      &:disabled
            background-color: #76AEED;
            cursor: not-allowed;

      &:active 
            background-color: #407FC7;


